{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom", "es6"],
      "outDir": "dist",
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "../examples/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "ts-node": {
      "files": true
  }
}
